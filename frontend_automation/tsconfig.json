{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"],
      "@specs/*": ["specs/*"]
    },
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["tests/**/*.ts", "utils/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
