{
  "uuid": "kong-gateway-dash",
  "title": "Kong Gateway Overview",
  "description": "Dashboard for monitoring Kong Gateway performance and errors",
  "tags": ["kong", "api-gateway"],
  "panels": [
    {
      "title": "Request Rate (RPS)",
      "type": "time_series",
      "query": "sum(rate(kong_http_status[5m]))",
      "layout": { "h": 6, "w": 12, "x": 0, "y": 0 }
    },
    {
      "title": "Average Request Latency",
      "type": "time_series",
      "query": "avg(rate(kong_latency_ms_sum[5m])) / avg(rate(kong_latency_ms_count[5m]))",
      "layout": { "h": 6, "w": 12, "x": 12, "y": 0 }
    },
    {
      "title": "4xx Errors (Client)",
      "type": "time_series",
      "query": "sum(rate(kong_http_status{code=~\"4..\"}[5m]))",
      "layout": { "h": 6, "w": 12, "x": 0, "y": 6 }
    },
    {
      "title": "5xx Errors (Server)",
      "type": "time_series",
      "query": "sum(rate(kong_http_status{code=~\"5..\"}[5m]))",
      "layout": { "h": 6, "w": 12, "x": 12, "y": 6 }
    }
  ]
}